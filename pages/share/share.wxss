/* pages/share/share.wxss */

.page {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -10;
}

.sim-desc {
  position: absolute;
  top: 130rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 450rpx;
  height: 300rpx;
  text-align: center;
  line-height: 120rpx;
}

.sim-desc image{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.user-cnt-desc {
  position: absolute;
  top: 320rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 600rpx;
  height: 5rem;
}

.avatar {
  position: absolute;
  top: -30rpx;
  left: -30rpx;
  width: 100rpx;
  height: 100rpx;
}

.badge {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  width: 75rpx;
  height: 75rpx;
}

.user-cnt-desc-back {
  position: absolute;
  left: 30rpx;
  width: 570rpx;
  height: 100%;
  top: 0;
  z-index: -1;
}

.user-cnt-desc text{
  position: absolute;
  color: #916F11;
  top: 1.2rem;
  left: 2rem;
  margin-right: 1rem;
  z-index: 1;
}


.record-hinter {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  width: 18rem;
  height: 21rem;
  line-height: 1.5rem;
  text-align: center;
  top: 100rpx;
  z-index: 10;
}

.record-hinter text {
  color:#916F11;
  margin-left: 1rem;
  margin-right: 1rem;
}

.record-hinter image {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.record-btn {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 10rpx;
  width: 300rpx;
  height: 300rpx;
  border: none;
  padding: 0;
}